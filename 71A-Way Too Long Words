#include<bits/stdc++.h>
using namespace std;
int main()
{
    int w;

    cin>>w;

    for(int i=0; i<w; i++)
    {
        string a;
        cin>>a;
        int n=a.size();
        if(n>10)
        {
            cout<<a[0]<<n-2<<a[n-1]<<endl;
        }
        else cout<<a<<endl;
    }
    return 0;
}
