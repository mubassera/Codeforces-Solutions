#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,count=0;
    bool P,V,T;
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>P>>V>>T;
        if(P==1&&V==1&&T==1)
        {
            count++;
        }
        else if(P==1&&V==1&&T!=1)
        {
            count++;
        }
        else if(P==1&&T==1&&V!=1)
        {
            count++;
        }
        else if(V==1&&T==1&&P!=1)
        {
            count++;
        }
    }
    cout<<count;
    return 0;
}
